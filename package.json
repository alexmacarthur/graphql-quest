{
  "name": "graphql-quest",
  "version": "1.0.4",
  "description": "Ultra-minimal library for making GraphQL requests.",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.esm.js",
  "exports": {
    "import": "./dist/index.modern.js",
    "require": "./dist/index.umd.js"
  },
  "browser": "./dist/index.modern.js",
  "types": "./dist/types.d.ts",
  "author": "Alex MacArthur <alex@macarthur.me> (https://macarthur.me)",
  "homepage": "https://github.com/alexmacarthur/graphql-quest",
  "scripts": {
    "start": "serve",
    "build": "microbundle -i src/quest.ts -o dist/index.js --name Quest --no-sourcemap",
    "watch": "microbundle -i src/quest.ts -o dist/index.js --name Quest --format umd --no-sourcemap watch",
    "prettify": "prettier \"./**/*.{ts,js,md}\" --write",
    "test": "jest",
    "prepare": "husky install"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "graphql",
    "request",
    "gql"
  ],
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "babel-jest": "^27.2.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "microbundle": "^0.13.3",
    "prettier": "^2.4.1",
    "serve": "^12.0.1",
    "typescript": "^4.4.3"
  },
  "browserslist": "supports es6-module and supports es6-module-dynamic-import, not opera > 0, not samsung > 0, not and_qq > 0",
  "lint-staged": {
    "*.{ts,js,md}": "prettier --write"
  }
}
